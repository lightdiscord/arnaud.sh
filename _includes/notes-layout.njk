permalink: "notes/{{title | slugify}}/index.html"
tags: notes
---
<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>arnaud.sh - {{ title }}</title>

    <meta property="og:type" content="article">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="article:author" content="LightDiscord">
    <meta property="twitter:card" content="summary_large_image" />

    <link rel="stylesheet" href="{{ '/assets/css/tailwind.css' | url }}">
</head>
<body class="page-article">
    <nav class="container mx-auto lg:px-16 xl:px-48">
        <ul class="py-2">
            <li><a href="/">Go back</a></li>
        </ul>
    </nav>
    <header>
        <div class="container mx-auto lg:px-16 xl:px-48">
            <hgroup>
                <h1>{{title}}</h1>
                <p>{{description}}</p>
            </hgroup>
        </div>
    </header>
    <main>
        <div class="container mx-auto lg:px-16 xl:px-48">
            <div class="content">
                {{ content | safe }}
            </div>
        </div>
    </main>
</body>
</html>